{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "assertion-analyzer.js",
            "test-runner.js",
            "tslint.json"
        ]
    },
    "jsRules": {
        "comment-format": [
            true,
            "check-lowercase",
            "check-space",
            {"ignore-words": ["TODO", "HACK"]}
        ],
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "class-name": true,
        "curly": true,
        "eofline": true,
        "forin": true,
        "import-spacing": true,
        "indent": [true, "spaces"],
        "jsdoc-format": true,
        "label-position": true,
        "max-line-length": [true, 120],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-console": false,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": false,
        "no-reference": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": false,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        // disable this rule as it is very heavy performance-wise and not that useful
        "no-use-before-declare": false,
        "object-literal-sort-keys": false,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "radix": true,
        "semicolon": [true, "always"],
        "space-before-function-paren": [true, {
            "anonymous": "never",
            "asyncArrow": "always",
            "constructor": "never",
            "method": "never",
            "named": "never"
        }],
        "trailing-comma": [true, {
            "multiline": "always",
            "singleline": "never"
        }],
        "triple-equals": [true, "allow-null-check"],
        "use-isnan": true,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ]
    },
    "rules": {
    },
    "rulesDirectory": []
}
